<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dim_16dp">

    <!-- TextView to Display Time-->
    <TextView
        android:id="@+id/tvTimer"
        style="@style/styleTextView"
        android:text="@string/default_time"
        android:textSize="@dimen/dim_26sp"
        android:textStyle="bold" />

    <!-- LinearLayout to Display Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/buttonReset"
            style="@style/styleButton"
            android:layout_weight="1"
            android:contentDescription="@string/textReset"
            android:padding="@dimen/dim_4dp"
            android:src="@drawable/ic_refresh"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonStop"
            style="@style/styleButton"
            android:layout_weight="1"
            android:contentDescription="@string/textStop"
            android:src="@drawable/ic_pause"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonStart"
            style="@style/styleButton"
            android:layout_weight="1"
            android:contentDescription="@string/textStart"
            android:src="@drawable/ic_play" />
    </LinearLayout>
</LinearLayout>

